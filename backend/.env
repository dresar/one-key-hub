# Mode
NODE_ENV=production

# Server
PORT=3001

# CORS (asal request yang diizinkan, misal front-end kamu)
CORS_ORIGIN=https://one.apprentice.cyou

# JWT (ganti dengan string acak panjang, jangan pakai default)
JWT_SECRET=isi_dengan_string_acak_panjang
JWT_REFRESH_SECRET=isi_dengan_string_acak_lain

# Database type: sekarang masih 'sqlite'
DB_CLIENT=sqlite
DB_FILE=local.db

# Kalau nanti mau MySQL, tinggal ganti:
# DB_CLIENT=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=isi_username_mysql_kamu
# DB_PASSWORD=isi_password_mysql_kamu
# DB_NAME=rdsmahat_one